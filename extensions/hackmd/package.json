{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hackmd",
  "title": "HackMD",
  "description": "HackMD Raycast extension",
  "icon": "command-icon.png",
  "author": "Yukai",
  "categories": [
    "Productivity",
    "Web",
    "Applications",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "browse-notes",
      "title": "Browse Notes",
      "subtitle": "HackMD",
      "description": "Browse HackMD Notes",
      "mode": "view"
    },
    {
      "name": "view-release-notes",
      "title": "View Release Notes",
      "subtitle": "HackMD",
      "description": "View HackMD Release Notes",
      "mode": "view"
    },
    {
      "name": "create-note",
      "title": "Create Note",
      "subtitle": "HackMD",
      "description": "Create a HackMD Note",
      "mode": "view"
    },
    {
      "name": "view-history",
      "title": "View History",
      "subtitle": "HackMD",
      "description": "View HackMD History",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "password",
      "title": "HackMD API Token",
      "description": "The API token you created on HackMD",
      "name": "api_token",
      "required": true
    },
    {
      "type": "textfield",
      "title": "HackMD API Base URL",
      "description": "The base URL of HackMD API",
      "name": "api_base_url",
      "default": "https://api.hackmd.io/v1",
      "required": false
    },
    {
      "type": "textfield",
      "title": "HackMD Instance URL",
      "description": "The base URL of HackMD instance",
      "name": "instance_url",
      "default": "https://hackmd.io",
      "required": false
    }
  ],
  "tools": [
    {
      "name": "get-current-user",
      "title": "Get Current User",
      "description": "Get Current Logged-in HackMD User, including teams"
    },
    {
      "name": "get-recent-notes",
      "title": "Get recent accessed notes",
      "description": "Get recently accessed notes from HackMD"
    },
    {
      "name": "get-team-workspace-notes",
      "title": "Get Team Workspace Notes",
      "description": "Get notes from a team workspace by team path"
    },
    {
      "name": "get-personal-workspace-notes",
      "title": "Get Personal Workspace Notes",
      "description": "Get notes from your personal workspace"
    },
    {
      "name": "view-note",
      "title": "View Note Details",
      "description": "Get detailed content and metadata for a specific note by ID"
    }
  ],
  "ai": {
    "evals": [
      {
        "input": "@hackmd Who am I or what are the teams I've joined?",
        "mocks": {
          "get-current-user": {
            "id": "1b46ed75-04ac-4d9b-bfbb-9344ef6bd1b6",
            "name": "My name",
            "email": "user@email",
            "userPath": "username",
            "photo": "https://src_to_image.png",
            "teams": [
              {
                "id": "08a5c75a-4d82-4dee-8b89-cba6f3dce369",
                "ownerId": null,
                "path": "hackmd",
                "name": "HackMD Dev",
                "logo": "https://uploads-public.hackmd.io/ZmEEvep.png",
                "description": "Team description",
                "visibility": "private",
                "createdAt": 1740586346009,
                "upgraded": true
              },
              {
                "id": "ba6e4c56-0c04-4b3a-be11-9249a7316554",
                "ownerId": null,
                "path": "team-path",
                "name": "Team Name",
                "logo": "https://uploads-public.hackmd.io/ZmEEvep.png",
                "description": "Public Team description",
                "visibility": "public",
                "createdAt": 1740586346009,
                "upgraded": true
              }
            ]
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "get-current-user"
            }
          },
          {
            "meetsCriteria": "Return user profile and joined teams"
          }
        ]
      },
      {
        "input": "@hackmd What are my recent notes?",
        "mocks": {
          "get-recent-notes": [
            {
              "id": "note_id",
              "title": "note_title",
              "tags": ["list", "of", "tags"],
              "createdAt": 1560349049743,
              "titleUpdatedAt": 1736666704378,
              "tagsUpdatedAt": null,
              "publishType": "view",
              "publishedAt": null,
              "permalink": null,
              "publishLink": "https://hackmd.io/@username/shortId",
              "shortId": "shortId",
              "content": "CONTENT_OMITTED_IN_LIST_API",
              "lastChangedAt": 1560351606067,
              "lastChangeUser": {
                "name": "",
                "userPath": "userpath",
                "photo": "https://link_to_photo.png",
                "biography": "bio"
              },
              "userPath": "userpath",
              "teamPath": null,
              "readPermission": "guest",
              "writePermission": "signed_in"
            }
          ]
        },
        "expected": [
          {
            "callsTool": {
              "name": "get-recent-notes"
            }
          },
          {
            "meetsCriteria": "Return history note list"
          }
        ]
      },
      {
        "input": "@hackmd Show me the notes in my personal workspace",
        "mocks": {
          "get-personal-workspace-notes": [
            {
              "id": "note_id_1",
              "title": "Personal Note Title",
              "tags": ["personal", "notes"],
              "createdAt": 1560349049743,
              "titleUpdatedAt": 1736666704378,
              "tagsUpdatedAt": null,
              "publishType": "view",
              "publishedAt": null,
              "permalink": null,
              "publishLink": "https://hackmd.io/@username/shortId1",
              "shortId": "shortId1",
              "content": "CONTENT_OMITTED_IN_LIST_API",
              "lastChangedAt": 1560351606067,
              "lastChangeUser": {
                "name": "",
                "userPath": "userpath",
                "photo": "https://link_to_photo.png",
                "biography": "bio"
              },
              "userPath": "userpath",
              "teamPath": null,
              "readPermission": "guest",
              "writePermission": "signed_in"
            }
          ]
        },
        "expected": [
          {
            "callsTool": {
              "name": "get-personal-workspace-notes"
            }
          },
          {
            "meetsCriteria": "Returns notes from personal workspace"
          }
        ]
      },
      {
        "input": "@hackmd Show me notes from my joined team",
        "mocks": {
          "get-current-user": {
            "id": "1b46ed75-04ac-4d9b-bfbb-9344ef6bd1b6",
            "name": "My name",
            "email": "user@email",
            "userPath": "username",
            "photo": "https://src_to_image.png",
            "teams": [
              {
                "id": "08a5c75a-4d82-4dee-8b89-cba6f3dce369",
                "ownerId": null,
                "path": "hackmd",
                "name": "HackMD Dev",
                "logo": "https://uploads-public.hackmd.io/ZmEEvep.png",
                "description": "Team description",
                "visibility": "private",
                "createdAt": 1740586346009,
                "upgraded": true
              },
              {
                "id": "ba6e4c56-0c04-4b3a-be11-9249a7316554",
                "ownerId": null,
                "path": "team-path",
                "name": "Team Name",
                "logo": "https://uploads-public.hackmd.io/ZmEEvep.png",
                "description": "Public Team description",
                "visibility": "public",
                "createdAt": 1740586346009,
                "upgraded": true
              }
            ]
          },
          "get-team-workspace-notes": [
            {
              "id": "team_note_id",
              "title": "Team Note Title",
              "tags": ["team", "notes"],
              "createdAt": 1560349049743,
              "titleUpdatedAt": 1736666704378,
              "tagsUpdatedAt": null,
              "publishType": "view",
              "publishedAt": null,
              "permalink": null,
              "publishLink": "https://hackmd.io/@teampath/shortId2",
              "shortId": "shortId2",
              "content": "CONTENT_OMITTED_IN_LIST_API",
              "lastChangedAt": 1560351606067,
              "lastChangeUser": {
                "name": "",
                "userPath": "userpath",
                "photo": "https://link_to_photo.png",
                "biography": "bio"
              },
              "userPath": "userpath",
              "teamPath": "hackmd",
              "readPermission": "guest",
              "writePermission": "signed_in"
            }
          ]
        },
        "expected": [
          {
            "callsTool": {
              "name": "get-current-user"
            }
          },
          {
            "meetsCriteria": "Return user profile and joined teams to identify the team path"
          },
          {
            "callsTool": {
              "name": "get-team-workspace-notes",
              "arguments": {
                "teamPath": "hackmd"
              }
            }
          },
          {
            "meetsCriteria": "Returns notes from specified team workspace"
          }
        ]
      },
      {
        "input": "@hackmd Show me details of note SomeNoteID",
        "mocks": {
          "view-note": {
            "id": "note_detail_id",
            "title": "Detailed Note Title",
            "tags": ["important", "documentation"],
            "createdAt": 1560349049743,
            "titleUpdatedAt": 1736666704378,
            "tagsUpdatedAt": null,
            "publishType": "view",
            "publishedAt": null,
            "permalink": null,
            "publishLink": "https://hackmd.io/@username/SomeNoteID",
            "shortId": "SomeNoteID",
            "content": "# Detailed Note Content\n\nThis is the full content of the note with Markdown formatting.\n\n## Section 1\n\nContent of section 1\n\n## Section 2\n\nContent of section 2 with **bold** and *italic* text.",
            "lastChangedAt": 1560351606067,
            "lastChangeUser": {
              "name": "Editor Name",
              "userPath": "editorpath",
              "photo": "https://link_to_photo.png",
              "biography": "Editor's bio"
            },
            "userPath": "userpath",
            "teamPath": null,
            "readPermission": "guest",
            "writePermission": "signed_in"
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "view-note",
              "arguments": {
                "noteId": "note_detail_id"
              }
            }
          },
          {
            "meetsCriteria": "Returns the detailed content and information for the specified note"
          }
        ]
      },
      {
        "input": "@hackmd Let me see my note with ID abc123_full_id",
        "mocks": {
          "view-note": {
            "id": "abc123_full_id",
            "title": "My Important Note",
            "tags": ["project", "meeting"],
            "createdAt": 1620349049743,
            "titleUpdatedAt": 1726666704378,
            "tagsUpdatedAt": 1726666704378,
            "publishType": "view",
            "publishedAt": null,
            "permalink": null,
            "publishLink": "https://hackmd.io/@username/abc123",
            "shortId": "abc123",
            "content": "# Project Meeting Notes\n\n## Agenda\n\n1. Project status\n2. Timeline review\n3. Next steps\n\n## Discussion\n\nWe discussed the current status of the project and decided on the next steps.",
            "lastChangedAt": 1720351606067,
            "lastChangeUser": {
              "name": "Me",
              "userPath": "username",
              "photo": "https://link_to_photo.png",
              "biography": "My bio"
            },
            "userPath": "username",
            "teamPath": null,
            "readPermission": "owner",
            "writePermission": "owner"
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "view-note",
              "arguments": {
                "noteId": "abc123_full_id"
              }
            }
          },
          {
            "meetsCriteria": "Returns the note content and metadata for the specified ID"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@hackmd/api": "2.1.0",
    "@raycast/api": "^1.93.0",
    "@raycast/utils": "^1.0.7",
    "mdast-util-to-markdown": "^1.3.0",
    "minisearch": "^5.0.0",
    "remark": "^14.0.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.8.10",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
