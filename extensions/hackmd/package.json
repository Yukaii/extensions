{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hackmd",
  "title": "HackMD",
  "description": "HackMD Raycast extension",
  "icon": "command-icon.png",
  "author": "Yukai",
  "categories": [
    "Productivity",
    "Web",
    "Applications",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "browse-notes",
      "title": "Browse Notes",
      "subtitle": "HackMD",
      "description": "Browse HackMD Notes",
      "mode": "view"
    },
    {
      "name": "view-release-notes",
      "title": "View Release Notes",
      "subtitle": "HackMD",
      "description": "View HackMD Release Notes",
      "mode": "view"
    },
    {
      "name": "create-note",
      "title": "Create Note",
      "subtitle": "HackMD",
      "description": "Create a HackMD Note",
      "mode": "view"
    },
    {
      "name": "view-history",
      "title": "View History",
      "subtitle": "HackMD",
      "description": "View HackMD History",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "password",
      "title": "HackMD API Token",
      "description": "The API token you created on HackMD",
      "name": "api_token",
      "required": true
    },
    {
      "type": "textfield",
      "title": "HackMD API Base URL",
      "description": "The base URL of HackMD API",
      "name": "api_base_url",
      "default": "https://api.hackmd.io/v1",
      "required": false
    },
    {
      "type": "textfield",
      "title": "HackMD Instance URL",
      "description": "The base URL of HackMD instance",
      "name": "instance_url",
      "default": "https://hackmd.io",
      "required": false
    }
  ],
  "tools": [
    {
      "name": "get-current-user",
      "title": "Get Current User",
      "description": "Get Current Logged-in HackMD User, including teams"
    }
  ],
  "ai": {
    "evals": [
      {
        "input": "@hackmd Who am I or what are the teams I've joined?",
        "mocks": {
          "get-current-user": {
            "id": "1b46ed75-04ac-4d9b-bfbb-9344ef6bd1b6",
            "name": "My name",
            "email": "user@email",
            "userPath": "username",
            "photo": "https://src_to_image.png",
            "teams": [
              {
                "id": "08a5c75a-4d82-4dee-8b89-cba6f3dce369",
                "ownerId": null,
                "path": "hackmd",
                "name": "HackMD Dev",
                "logo": "https://uploads-public.hackmd.io/ZmEEvep.png",
                "description": "Team description",
                "visibility": "private",
                "createdAt": 1740586346009,
                "upgraded": true
              },
              {
                "id": "ba6e4c56-0c04-4b3a-be11-9249a7316554",
                "ownerId": null,
                "path": "team-path",
                "name": "Team Name",
                "logo": "https://uploads-public.hackmd.io/ZmEEvep.png",
                "description": "Public Team description",
                "visibility": "public",
                "createdAt": 1740586346009,
                "upgraded": true
              }
            ]
          }
        },
        "expected": [
          {
            "callsTool": {
              "name": "get-current-user"
            }
          },
          {
            "meetsCriteria": "Return user profile and joined teams"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@hackmd/api": "2.1.0",
    "@raycast/api": "^1.93.0",
    "@raycast/utils": "^1.0.7",
    "mdast-util-to-markdown": "^1.3.0",
    "minisearch": "^5.0.0",
    "remark": "^14.0.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.8.10",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
