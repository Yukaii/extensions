{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "any-watch",
  "title": "Any Watch",
  "description": "Build your own quick dashboard with API endpoint and jq query.",
  "icon": "command-icon.png",
  "author": "Yukai",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show Dashboard",
      "subtitle": "Any Watch",
      "description": "Show Any Watch Dashboard",
      "mode": "view"
    },
    {
      "name": "add",
      "title": "Add New Endpoint",
      "subtitle": "Any Watch",
      "description": "Add New Endpoint to Dashboard",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "jqPath",
      "type": "textfield",
      "required": true,
      "title": "Jq Binary Directory",
      "description": "Use for jq query syntax interpolation. Please input the directory path containing jq binary"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.3",
    "moment": "^2.29.1",
    "node-fetch": "^3.1.0",
    "node-jq": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
